#			if [ ! -d "$FO4VRDDIR" ] || [ -z "$(ls -A "$FO4VRDDIR")" ]; then
#				writelog "INFO" "${FUNCNAME[0]} - creating symlink, from Fallout4 download dir '$FO4DDIR' to Fallout4VR download dir '$FO4VRDDIR'"
#				rmdir "$FO4VRDDIR" 2>/dev/null
#				ln -s "$FO4DDIR" "$FO4VRDDIR"
#			fi
#		fi
#	fi

## Skyrim VR: symlink downloaddir if possible:
#	if [ "$AID" == "611670" ]; then
#		SKYDDIR="$VORTEXDOWNLOADPATH/${NEXUSGAMEID//vr/se}"
#		SKYVRDDIR="$VORTEXDOWNLOADPATH/$NEXUSGAMEID"
#
#		if [ -d "$SKYDDIR" ]; then
#			if [ ! -d "$SKYVRDDIR" ] || [ -z "$(ls -A "$SKYVRDDIR")" ]; then
#				writelog "INFO" "${FUNCNAME[0]} - creating symlink, from SkyrimSE download dir '$SKYDDIR' to SkyrimVR download dir '$SKYVRDDIR'"
